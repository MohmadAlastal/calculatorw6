<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="20dp">

        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@id/resultsTV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/resultsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:layout_margin="5dp"
            android:textColor="@color/red"
            android:onClick="allClearAction"
            android:text="AC"/>
        <Button
            style="@style/buttonNumber"
            android:layout_margin="5dp"
            android:textColor="@color/red"
            android:onClick="backSpaceAction"
            android:text="âŒ«"/>

        <Button
            android:id="@+id/hex_button"
            style="@style/buttonOperator"
            android:layout_margin="5dp"
            android:text="hex"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:layout_margin="5dp"
            android:id="@+id/buttonNumber7"
            style="@style/buttonNumber"
            android:text="7"/>
        <Button
            android:layout_margin="5dp"
            android:id="@+id/buttonNumber8"
            style="@style/buttonNumber"
            android:text="8"/>
        <Button
            android:layout_margin="5dp"
            android:id="@+id/buttonNumber9"
            style="@style/buttonNumber"
            android:text="9" />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/decimal_button"
            style="@style/buttonOperator"
            android:text="dec"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:layout_margin="5dp"
            android:id="@+id/buttonNumber4"
            style="@style/buttonNumber"
            android:text="4"/>
        <Button
            android:layout_margin="5dp"
            android:id="@+id/buttonNumber5"
            style="@style/buttonNumber"
            android:text="5"/>
        <Button
            android:layout_margin="5dp"
            android:id="@+id/buttonNumber6"
            style="@style/buttonNumber"
            android:text="6" />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/octal_button"
            style="@style/buttonOperator"
            android:text="oct"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/buttonNumber1"
            android:layout_margin="5dp"
            style="@style/buttonNumber"
            android:text="1"/>
        <Button
            android:id="@+id/buttonNumber2"
            android:layout_margin="5dp"
            style="@style/buttonNumber"
            android:text="2"/>
        <Button
            android:id="@+id/buttonNumber3"
            android:layout_margin="5dp"
            style="@style/buttonNumber"
            android:text="3" />
        <Button
            android:id="@+id/binary_button"
            android:layout_margin="5dp"
            style="@style/buttonOperator"
            android:text="bin"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/buttonNumber"
            android:layout_margin="5dp"
            style="@style/buttonNumber"
            android:text="."/>
        <Button
            android:id="@+id/buttonNumber0"
            android:layout_margin="5dp"
            style="@style/buttonNumber"
            android:text="0"/>


    </LinearLayout>



</LinearLayout>